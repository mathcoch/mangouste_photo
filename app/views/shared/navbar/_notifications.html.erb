<% if account_content? %>
  <div class="notification dropdown-toggle" data-toggle="dropdown">
    <i class="fa fa-bell-o" aria-hidden="true"></i>
    <% unless current_user.employee.notifications_count.zero? %>
      <span class="badge"><%= current_user.employee.notifications_count %></span>
    <% end %>
  </div>

  <% unless current_user.employee.notifications_count.zero? %>
    <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
      <% current_user.employee.notifications.each do |notification| %>
        <li>
          <%= link_to path_to_notification(notification) do %>
            <%= image_tag photo_for_notification(notification), class:'avatar-xxsmall' %>
            <%= text_for_notification(notification) %>
          <% end %>
        </li>
      <% end %>
    </ul>
  <% else %>
    <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
      <li class="text-center"><p>No notifications</p></li>
    </ul>
  <% end %>
<% end %>
